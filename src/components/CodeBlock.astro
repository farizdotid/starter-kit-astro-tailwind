---
interface Props {
  code: string;
  language?: string;
  title?: string;
}

const { code, language = "bash", title } = Astro.props;
---

<div class="rounded-lg overflow-hidden bg-gray-900 shadow-md">
  {title && (
    <div class="bg-gray-800 px-4 py-2 text-gray-200 text-sm font-mono border-b border-gray-700">
      {title}
    </div>
  )}
  <pre class="p-4 overflow-x-auto">
    <code class={`language-${language}`}>{code}</code>
  </pre>
</div>