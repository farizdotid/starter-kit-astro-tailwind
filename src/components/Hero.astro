---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Get Started", 
  ctaLink = "#getting-started" 
} = Astro.props;
---

<div class="bg-gradient-to-br from-indigo-500 to-purple-600 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold tracking-tight">{title}</h1>
      <p class="mt-6 max-w-2xl mx-auto text-xl md:text-2xl opacity-90">{subtitle}</p>
      <div class="mt-10">
        <a 
          href={ctaLink} 
          class="inline-block bg-white text-indigo-600 px-6 py-3 rounded-md font-medium shadow-md hover:bg-gray-100 transition-colors duration-200"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</div>