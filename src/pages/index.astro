// Installation code example
const installCode = `# Clone the repository
git clone https://github.com/yourusername/astro-tailwind-starter.git my-project

# Navigate to the project directory
cd my-project

# Install dependencies
npm install

# Start the development server
npm run dev`;

// Component usage example
const componentCode = `---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

---

<Layout title="About Us | Astro Tailwind Starter">
  <Navbar />
  
  <Hero 
    title="About Our Company" 
    subtitle="Learn more about our mission and values"
  />
  
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Your page content here -->
  </main>
  
  <Footer />
</Layout>`;

// Tailwind customization example
const tailwindCode = `// tailwind.config.mjs
/** @type {import('tailwindcss').Config} */
export default {
  content: ['./src/**/*.{astro,html,js,jsx,md,mdx,svelte,ts,tsx,vue}'],
  theme: {
    extend: {
      fontFamily: {
        poppins: ['Poppins', 'sans-serif'],
      },
      colors: {
        primary: {
          50: '#f0f9ff',
          100: '#e0f2fe',
          // Add your custom colors here
        },
      },
    },
  },
  plugins: [],
}`;
---

<Layout title="Astro Tailwind Starter Kit - Modern Web Development">
  <Navbar />
  
  <Hero 
    title="Astro Tailwind Starter Kit" 
    subtitle="A modern, responsive starter template with Astro, Tailwind CSS, and Poppins font"
  />
  
  <main>
    <!-- Features Section -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">Features</h2>
          <p class="mt-4 text-xl text-gray-600">Everything you need to build modern websites</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <FeatureCard 
            title="Lightning Fast" 
            description="Built with Astro for incredible performance and minimal JavaScript."
            icon={icons.speed}
          />
          <FeatureCard 
            title="Tailwind CSS" 
            description="Utility-first CSS framework for rapid UI development without leaving your HTML."
            icon={icons.tailwind}
          />
          <FeatureCard 
            title="Component-Based" 
            description="Modular components that can be reused across your project."
            icon={icons.components}
          />
          <FeatureCard 
            title="SEO Optimized" 
            description="Built-in SEO features to help your site rank better in search engines."
            icon={icons.seo}
          />
          <FeatureCard 
            title="TypeScript Ready" 
            description="Full TypeScript support for better developer experience and fewer bugs."
            icon={icons.typescript}
          />
          <FeatureCard 
            title="Fully Responsive" 
            description="Looks great on all devices, from mobile phones to desktop computers."
            icon={icons.responsive}
          />
        </div>
      </div>
    </section>
    
    <!-- How to Use Section -->
    <section id="getting-started" class="py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-gray-900">How to Use This Template</h2>
          <p class="mt-4 text-xl text-gray-600">Get up and running in minutes</p>
        </div>
        
        <div class="space-y-12">
          <!-- Installation -->
          <div>
            <h3 class="text-2xl font-semibold mb-4">1. Installation</h3>
            <p class="text-gray-600 mb-6">
              Clone the repository and install dependencies to get started with your new project.
            </p>
            <CodeBlock code={installCode} language="bash" title="Terminal" />
          </div>
          
          <!-- Project Structure -->
          <div>
            <h3 class="text-2xl font-semibold mb-4">2. Project Structure</h3>
            <p class="text-gray-600 mb-6">
              The template follows a clean and organized structure:
            </p>
            <div class="bg-white rounded-lg shadow-md p-6 font-mono text-sm">
              <ul class="space-y-2 text-gray-700">
                <li><span class="text-indigo-600">src/</span> - Source files</li>
                <li>├── <span class="text-indigo-600">components/</span> - Reusable UI components</li>
                <li>├── <span class="text-indigo-600">layouts/</span> - Page layouts</li>
                <li>├── <span class="text-indigo-600">pages/</span> - Page routes</li>
                <li>├── <span class="text-indigo-600">styles/</span> - Global styles</li>
                <li><span class="text-indigo-600">public/</span> - Static assets</li>
                <li><span class="text-indigo-600">astro.config.mjs</span> - Astro configuration</li>
                <li><span class="text-indigo-600">tailwind.config.mjs</span> - Tailwind configuration</li>
              </ul>
            </div>
          </div>
          
          <!-- Using Components -->
          <div>
            <h3 class="text-2xl font-semibold mb-4">3. Using Components</h3>
            <p class="text-gray-600 mb-6">
              The template includes several pre-built components that you can use in your pages:
            </p>
            <CodeBlock code={componentCode} language="astro" title="src/pages/about.astro" />
          </div>
          
          <!-- Customizing Tailwind -->
          <div>
            <h3 class="text-2xl font-semibold mb-4">4. Customizing Tailwind</h3>
            <p class="text-gray-600 mb-6">
              Extend Tailwind's default configuration in the tailwind.config.mjs file:
            </p>
            <CodeBlock code={tailwindCode} language="javascript" title="tailwind.config.mjs" />
          </div>
          
          <!-- Deployment -->
          <div>
            <h3 class="text-2xl font-semibold mb-4">5. Deployment</h3>
            <p class="text-gray-600 mb-6">
              Deploy your site to your favorite hosting platform:
            </p>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
              <a href="https://docs.astro.build/en/guides/deploy/netlify/" target="_blank" rel="noopener noreferrer" class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <img src="https://www.netlify.com/v3/img/components/logomark.png" alt="Netlify" class="h-12 mb-4" />
                <span class="font-medium">Deploy to Netlify</span>
              </a>
              <a href="https://docs.astro.build/en/guides/deploy/vercel/" target="_blank" rel="noopener noreferrer" class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <img src="https://assets.vercel.com/image/upload/v1607554385/repositories/vercel/logo.png" alt="Vercel" class="h-12 mb-4" />
                <span class="font-medium">Deploy to Vercel</span>
              </a>
              <a href="https://docs.astro.build/en/guides/deploy/github/" target="_blank" rel="noopener noreferrer" class="flex flex-col items-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                <img src="https://github.githubassets.com/images/modules/logos_page/GitHub-Mark.png" alt="GitHub Pages" class="h-12 mb-4" />
                <span class="font-medium">Deploy to GitHub Pages</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- CTA Section -->
    <section class="py-16 bg-indigo-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-indigo-600">Ready to Get Started?</h2>
        <p class="mt-4 text-xl text-gray-600 max-w-3xl mx-auto">
          Start building your next project with this template and focus on what matters most - your content and features.
        </p>
        <div class="mt-8 flex justify-center gap-4">
          <a href="https://github.com/yourusername/astro-tailwind-starter" target="_blank" rel="noopener noreferrer" class="inline-block bg-indigo-600 text-white px-6 py-3 rounded-md font-medium shadow-md hover:bg-indigo-700 transition-colors duration-200">
            View on GitHub
          </a>
          <a href="https://docs.astro.build" target="_blank" rel="noopener noreferrer" class="inline-block bg-white text-indigo-600 border border-indigo-600 px-6 py-3 rounded-md font-medium hover:bg-indigo-50 transition-colors duration-200">
            Astro Documentation
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>